      "Resource": "*"
    },
    {
      "Action": "s3:*",
      "Effect": "Allow",
      "Resource": [
        "arn:aws:s3:::${cluster_bucket}/*",
        "arn:aws:s3:::${cluster_bucket}"
      ]
    }
  ]
}